<p id="notice"><%= notice %></p>

<div class='card'>
  <div class="card-body">
    <h1 class='card-title'><%= @device.part_number %></h1>
    <div class='card-subtitle'><%= @device.friendly_name %></div>

    <p class='card-text'>
      <strong>Addresses:</strong>
      <ul class="list-group">
	<% @device.addresses.each do |addr|  %>
	<li class="list-group-item"><%= addr %></li>
	<% end %>
      </ul>
    </p>

    <p class='card-text'>
      <strong>Datasheet:</strong>
      <%= @device.datasheet %>
    </p>

    <p class='card-text'>
      <strong>Adafruit:</strong>
      <%= @device.adafruit %>
    </p>

    <p class='card-text'>
      <strong>Sparkfun:</strong>
      <%= @device.sparkfun %>
    </p>

    <p class='card-text'>
      <strong>Amazon:</strong>
      <%= @device.amazon %>
    </p>
  </div>
</div>

<%= link_to 'Edit', edit_device_path(@device) %> |
<%= link_to 'Back', devices_path %>

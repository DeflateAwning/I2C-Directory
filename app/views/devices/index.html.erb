<p id="notice"><%= notice %></p>

<h1>Devices</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Part</th>
      <th>Description</th>
      <th>Addresses</th>
      <th>Datasheet</th>
      <th>Adafruit</th>
      <th>Sparkfun</th>
      <th>Amazon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= link_to device.part_number, device %></td>
        <td><%= device.friendly_name %></td>
        <td><%= device.addresses %></td>
        <td><%= device.datasheet %></td>
        <td><%= device.adafruit %></td>
        <td><%= device.sparkfun %></td>
        <td><%= device.amazon %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


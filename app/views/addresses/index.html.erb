<h1>Addresses</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Address</th>
      <th>Devices</th>
      <th>Reserved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <% if address.reserved? || address.device.count > 0 %>
      <tr>
        <td><%= link_to("0x%02x" %address.address, address) %></td>
	<td>
	  <% address.device.map do |device| %>
	     <%= link_to(device.part_number, device) %> 
	   <% end %>
	</td>
	<td>
	  <% if address.reserved? %>
	  âœ”
	  <% end %>
	</td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

